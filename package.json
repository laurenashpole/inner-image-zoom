{
  "private": true,
  "workspaces": [
    "packages/react",
    "packages/vanilla",
    "packages/vue"
  ],
  "scripts": {
    "dev": "webpack serve --config ./webpack.config.dev.js",
    "dev:react": "yarn run dev --env=framework=react",
    "dev:vue": "yarn run dev --env=framework=vue",
    "build": "webpack --config ./webpack.config.prod.js",
    "build:vue": "yarn run build --env=framework=vue",
    "test": "eslint . && yarn run test:types && karma start karma.conf.js",
    "test:watch": "yarn run test --auto-watch --single-run false",
    "test:coverage": "yarn run test --coverage",
    "test:types": "tsd -t ./packages/vanilla/src/index.d.ts",
    "lint": "eslint --fix ."
  },
  "devDependencies": {
    "@babel/core": "^7.22.9",
    "@babel/preset-env": "^7.22.9",
    "@babel/preset-react": "^7.26.3",
    "@jsdevtools/coverage-istanbul-loader": "^3.0.5",
    "@testing-library/dom": "^8.17.1",
    "babel-loader": "^9.1.3",
    "chai": "^4.3.6",
    "copy-webpack-plugin": "^11.0.0",
    "css-loader": "^6.7.1",
    "css-minimizer-webpack-plugin": "^4.0.0",
    "eslint": "^8.22.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.37.4",
    "html-webpack-plugin": "^5.5.0",
    "karma": "^6.4.0",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^3.1.1",
    "karma-cli": "^2.0.0",
    "karma-coverage-istanbul-reporter": "^3.0.3",
    "karma-mocha": "^2.0.1",
    "karma-mocha-reporter": "^2.2.5",
    "karma-webpack": "^5.0.0",
    "mini-css-extract-plugin": "^2.6.1",
    "mocha": "^10.0.0",
    "prettier": "^2.7.1",
    "prop-types": "^15.8.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "release-it": "^15.9.3",
    "style-loader": "^3.3.1",
    "tsd": "^0.28.0",
    "vue": "^3.2.38",
    "vue-loader": "^17.0.0",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0",
    "webpack-dev-server": "^4.10.0",
    "webpack-remove-empty-scripts": "^1.0.1"
  },
  "release-it": {
    "npm": false
  },
  "tsd": {
    "directory": "tests"
  }
}
